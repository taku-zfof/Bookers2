<div>
    <h2>User Info</h2>
    <%= image_tag user.get_profile_image %>

    <table class="table table-striped">
      <tbody>
        <tr></tr>
        <tr>
          <th>Name</th>
          <th><%=user.name%></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th><%=user.introduction%></th>
        </tr>
      </tbody>
    </table>


