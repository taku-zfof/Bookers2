<div class="container">
<div class="row">
<div class="col-md-3">

<%= render 'x', user: current_user %>
<%= render 'w', book: @book %>

</div>

<div class="col-md-8 offset-md-1 ">
  <h2>Books</h2>

    <table class="table table-striped">

      <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
        </tr>
      </thead>

      <tbody>
       <% @books.each do |book| %>
        <tr>
          <td><%=link_to user_path(book.user.id) do%>
          <%= image_tag book.user.get_profile_image %>
          <%end%></td>
          <td><%=link_to "#{book.title}",book_path(book.id) %></td>
          <td><%= book.body %></td>
        </tr>
       <% end %>
      </tbody>

    </table>

</div>
</div>
</div>