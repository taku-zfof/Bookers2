<div>
    <h1>User Info</h1>
    <%= image_tag @user.get_image %>
    <h2>Name:<%=@user.name%></h2>
    <h2>introduction:<%=@user.introduction%></h2>
    <%= link_to edit_user_path(@user.id) do %>
       <p>image</p>
    <% end %>
</div>

<div>
  <h1>New Book</h1>
  <%= form_with model: @book do |f| %>
    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :body %>
    <%= f.submit 'Create Book' %>
  <% end %>
</div>



