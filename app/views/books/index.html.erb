<div class="container">
<div class="row">
<div class="col-md-3">

<%= render 'w', book: @book %>

</div>
<div class="col-md-1"></div>

<div class="col-md-8 ">
  <h2>Books</h2>

    <table class="table table-striped">

      <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
        </tr>
      </thead>

      <tbody>
       <% @books.each do |book| %>
        <tr>
          <td><%=image_tag book.user.get_image%></td>
          <td><%=link_to "#{book.title}",book_path(book.id) %></td>
          <td><%= book.body %></td>
        </tr>
       <% end %>
      </tbody>

    </table>

</div>
</div>
</div>