<div class="container">
<div class="row">
<div class="col-md-3">


<%= render 'x', user: @book.user %>
<%= render 'w', book: Book.new %>

</div>


<div class="col-md-8 offset-md-1">


<h1>Book detail</h1>
<table class="table table-striped">
  <tbody>
    <tr>
      <td><%=link_to user_path(@book.user.id) do%>
      <%= image_tag @book.user.get_profile_image %>
      <%end%></br><%=link_to "#{@book.user.name}", user_path(@book.user.id)%></td>
      <td><%= @book.title %></td>
      <td><%= @book.body %></td>



      <% if @book.user == current_user %>
        <td><%=link_to "Edit", edit_book_path(@book.id),class:"btn btn-sm btn-success" %></td>
        <td><%=link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか？" ,class:"btn btn-sm btn-danger" %></td>
      <%end%>
    </tr>
  </tbody>

</table>

</div>
</div>
</div>


