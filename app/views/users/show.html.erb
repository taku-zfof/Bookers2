<h1>共通レイアウト</h1>

<h1>Books</h1>
  <table>

      <thead>
        <tr>
          <th></th>
          <th>title</th>
          <th>opinion</th>
        </tr>
      </thead>

      <tbody>
       <% @books.each do|book| %>
        <tr>
          <td><%= image_tag book.user.get_image %></td>
          <td><%=link_to "#{book.title}", book_path(book.id)%></td>
          <td><%= book.body %></td>
        </tr>

       <%end%>

      </tbody>

    </table>
